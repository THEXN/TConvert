<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TConvert"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="TConvert.MainWindow"
        mc:Ignorable="d"
        Title="TConvert" ResizeMode="CanMinimize" SnapsToDevicePixels="True" UseLayoutRounding="True" Loaded="OnWindowLoaded" Background="#FFF0F0F0" Icon="App.ico" AllowDrop="True" Drop="OnFileDrop" DragEnter="OnFileDropEnter" DragLeave="OnFileDropLeave" Closing="OnWindowClosing" DragOver="OnFileDropOver" PreviewMouseDown="OnPreviewMouseDown" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style x:Key="ButtonImageDisablable" TargetType="{x:Type Image}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="0" Height="280" Width="450">
        <Menu DockPanel.Dock="Top" x:Name="menu" BorderThickness="0,0,0,1" BorderBrush="#FF919395">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFECEEF1" Offset="0"/>
                    <GradientStop Color="#FFD6D9DC" Offset="0.852"/>
                    <GradientStop Color="#FFE6E8EB" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="文件">
                <MenuItem Header="启动 Terraria" Click="OnLaunchTerraria">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/TerrariaIcon.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="打开 Terraria 文件夹" Click="OnOpenTerrariaFolder">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Browse.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="退出" Click="OnExit">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Exit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="选项">
                <MenuItem x:Name="menuItemPremultiply" Header="预乘 Alpha" IsCheckable="True">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Premultiply.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuItemCompressImages" Header="压缩图片" Click="OnCompressImagesChecked" IsCheckable="True">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Compression.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuItemCompletionSound" Header="完成声音" Click="OnCompletionSoundChecked" IsCheckable="True">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Sound.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="自动关闭">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/AutoClose.png"/>
                    </MenuItem.Icon>
                    <MenuItem x:Name="menuItemAutoCloseProgress" Header="窗口进度" Click="OnAutoCloseProgress" IsCheckable="True">
                        <MenuItem.Icon>
                            <Image Source="Resources/Icons/CloseProgress.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="menuItemAutoCloseDropProgress" Header="文件拖放进度" Click="OnAutoCloseDropProgress" IsCheckable="True">
                        <MenuItem.Icon>
                            <Image Source="Resources/Icons/CloseDropProgress.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="menuItemAutoCloseCmdProgress" Header="命令行进度" Click="OnAutoCloseCmdProgress" IsCheckable="True">
                        <MenuItem.Icon>
                            <Image Source="Resources/Icons/CloseCmdProgress.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="关于" Click="OnAbout">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/About.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="帮助" Click="OnHelp">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Help.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="鸣谢" Click="OnCredits">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/Credits.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="查看 GitHub" Click="OnViewOnGitHub">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/GitHub.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="查看 GitHub（中文版）" Click="OnViewOnCNGitHub">
                    <MenuItem.Icon>
                        <Image Source="Resources/Icons/GitHub.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid>
            <TextBox x:Name="textBoxTerrariaContent" Height="23" Margin="20,31,52,0" VerticalAlignment="Top" IsHitTestVisible="True" IsTabStop="False" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnTerrariaContentChanged"/>
            <Button HorizontalAlignment="Right" Margin="0,31,20,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnBrowseTerraria">
                <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False"/>
            </Button>
            <Label x:Name="label" Content="Terraria 内容文件夹" HorizontalAlignment="Left" Margin="20,5,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
            <TabControl x:Name="tabControl" Margin="5,65,5,5" SelectionChanged="OnTabChanged">
                <TabItem Header="提取" IsTabStop="False">
                    <Grid Background="#FFF9F9F9">
                        <Label Content="提取模式" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <ComboBox x:Name="comboBoxExtractMode" HorizontalAlignment="Left" Margin="100,12,0,0" VerticalAlignment="Top" Width="100" SelectedIndex="0" SelectionChanged="OnExtractModeChanged" IsTabStop="False">
                            <System:String>文件夹</System:String>
                            <System:String>文件</System:String>
                        </ComboBox>
                        <Button x:Name="buttonExtract" Content="提取" HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="75" Click="OnExtract" IsDefault="True"/>
                        <Button x:Name="buttonExtractUseTerraria" Content="使用 Terraria" HorizontalAlignment="Right" Margin="0,12,90,0" VerticalAlignment="Top" Width="100" Click="OnExtractUseTerraria" IsTabStop="False" Focusable="False"/>

                        <Label x:Name="labelExtractInput" Content="输入文件夹" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxExtractInput" Height="23" Margin="100,47,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnExtractInputChanged"/>
                        <Button HorizontalAlignment="Right" Margin="0,47,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnExtractChangeInput">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>
                        <Label x:Name="labelExtractOutput" Content="输出文件夹" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxExtractOutput" Height="23" Margin="100,80,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnExtractOutputChanged"/>
                        <Button x:Name="buttonExtractOutput" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnExtractChangeOutput">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>

                        <CheckBox x:Name="checkBoxExtractImages" Content="图片" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnExtractImagesChecked" IsTabStop="False"/>
                        <CheckBox x:Name="checkBoxExtractSounds" Content="声音" HorizontalAlignment="Left" Margin="75,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnExtractSoundsChecked" IsTabStop="False"/>
                        <CheckBox x:Name="checkBoxExtractFonts" Content="字体" HorizontalAlignment="Left" Margin="141,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnExtractFontsChecked" IsTabStop="False"/>
                        <CheckBox x:Name="checkBoxExtractWaveBank" Content="波形库" HorizontalAlignment="Left" Margin="197,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnExtractWaveBankChecked" IsTabStop="False"/>

                        <CheckBox x:Name="checkBoxExtractUseInput" Content="将输入作为输出" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" Click="OnExtractUseInputChecked" IsTabStop="False"/>
                    </Grid>
                </TabItem>

                <TabItem Header="转换" IsTabStop="False">
                    <Grid Background="#FFF9F9F9">
                        <Label Content="转换模式" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <ComboBox x:Name="comboBoxConvertMode" HorizontalAlignment="Left" Margin="100,12,0,0" VerticalAlignment="Top" Width="100" SelectedIndex="0" SelectionChanged="OnConvertModeChanged" IsTabStop="False">
                            <System:String>文件夹</System:String>
                            <System:String>文件</System:String>
                        </ComboBox>
                        <Button x:Name="buttonConvert" Content="转换" HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="75" Click="OnConvert" IsDefault="True"/>
                        <Button x:Name="buttonConvertUseTerraria" Content="使用 Terraria" HorizontalAlignment="Right" Margin="0,12,90,0" VerticalAlignment="Top" Width="100" Click="OnConvertUseTerraria" AllowDrop="True" IsHitTestVisible="True" IsTabStop="False" Focusable="False"/>

                        <Label x:Name="labelConvertInput" Content="输入文件夹" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxConvertInput" Height="23" Margin="100,47,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnConvertInputChanged"/>
                        <Button HorizontalAlignment="Right" Margin="0,47,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnConvertChangeInput">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>
                        <Label x:Name="labelConvertOutput" Content="输出文件夹" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxConvertOutput" Height="23" Margin="100,80,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnConvertOutputChanged"/>
                        <Button x:Name="buttonConvertOutput" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Width="22" Height="22" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnConvertChangeOutput">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>

                        <CheckBox x:Name="checkBoxConvertImages" Content="图片" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnConvertImagesChecked" IsTabStop="False" Focusable="False"/>
                        <CheckBox x:Name="checkBoxConvertSounds" Content="声音" HorizontalAlignment="Left" Margin="75,0,0,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" IsChecked="True" Click="OnConvertSoundsChecked" Focusable="False" IsTabStop="False"/>

                        <CheckBox x:Name="checkBoxConvertUseInput" Content="将输入作为输出" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Padding="4,-1,0,0" Click="OnConvertUseInputChecked" IsTabStop="False" Focusable="False"/>
                    </Grid>
                </TabItem>

                <TabItem Header="备份" IsTabStop="False">
                    <Grid Background="#FFF9F9F9">
                        <Label Content="备份或恢复" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <Button Content="恢复" HorizontalAlignment="Right" Margin="0,12,90,0" VerticalAlignment="Top" Width="75" Click="OnRestore" IsDefault="True"/>
                        <Button Content="备份" HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="75" Click="OnBackup"/>
                        <Button Content="使用 Terraria" HorizontalAlignment="Right" Margin="0,12,170,0" VerticalAlignment="Top" Width="100" Click="OnBackupUseTerraria" Focusable="False" IsTabStop="False"/>

                        <Label Content="内容文件夹" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxContent" Height="23" Margin="100,47,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnContentChanged"/>
                        <Button HorizontalAlignment="Right" Margin="0,47,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnBackupChangeContent">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>
                        <Label Content="备份文件夹" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxBackup" Height="23" Margin="100,80,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnBackupChanged"/>
                        <Button HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnBackupChangeBackup">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>
                    </Grid>
                </TabItem>

                <TabItem Header="脚本" IsTabStop="False">
                    <Grid Background="#FFF9F9F9">
                        <Label Content="运行提取、转换或恢复脚本" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <Button x:Name="buttonScript" Content="运行脚本" HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="75" Click="OnRunScript" IsDefault="True"/>

                        <Label Content="脚本文件" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="textBoxScript" Height="23" Margin="100,47,42,0" VerticalAlignment="Top" IsHitTestVisible="True" AllowDrop="True" ScrollViewer.CanContentScroll="True" TextChanged="OnScriptChanged"/>
                        <Button HorizontalAlignment="Right" Margin="0,47,10,0" VerticalAlignment="Top" Width="23" Height="23" Padding="0" Grid.IsSharedSizeScope="True" ToolTip="浏览" Focusable="False" IsTabStop="False" Click="OnChangeScript">
                            <Image Height="16" Width="16" Source="Resources/Icons/Browse.png" IsHitTestVisible="False" Style="{StaticResource ButtonImageDisablable}"/>
                        </Button>
                    </Grid>
                </TabItem>

            </TabControl>
            <Label x:Name="labelDrop" AllowDrop="True" Margin="0" BorderBrush="#FF8C8E94" BorderThickness="0" Background="#CCF9F9F9" IsHitTestVisible="True" Content="提取或转换文件" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Visibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>
